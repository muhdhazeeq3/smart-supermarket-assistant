<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#342E4A"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="178dp"
        android:layout_height="125dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/shoppingcart" />

    <TextView
        android:id="@+id/COLO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-black"
        android:text="Cipta Akaun Anda!"
        android:textColor="#FAF0E5E5"
        android:textColorHint="#F5EDED"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/et_username2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="50dp"
        android:background="#00090808"
        app:layout_constraintBottom_toBottomOf="@+id/et_username2"
        app:layout_constraintEnd_toStartOf="@+id/et_username2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/et_username2"
        app:srcCompat="@android:drawable/sym_action_email" />

    <EditText
        android:id="@+id/et_username2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="Emel"
        android:inputType="textEmailAddress"
        android:textColor="#F5F1F1"
        android:textColorHighlight="#000F0E0E"
        android:textColorHint="#FAF7F7"
        app:layout_constraintBottom_toTopOf="@+id/u_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/COLO" />

    <ImageView
        android:id="@+id/iv_user"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/u_name"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/u_name"
        app:srcCompat="@drawable/ic_account_circle_black_24dp" />

    <EditText
        android:id="@+id/u_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="Nama Pengguna"
        android:inputType="textPersonName"
        android:shadowColor="@android:color/background_light"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#272020"
        android:textColorHint="#FAF5F5"
        android:textColorLink="#00FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/p_word"
        app:layout_constraintEnd_toEndOf="@+id/et_username2"
        app:layout_constraintStart_toEndOf="@+id/iv_user"
        app:layout_constraintTop_toBottomOf="@+id/et_username2" />

    <ImageView
        android:id="@+id/iv_pass"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/p_word"
        app:layout_constraintEnd_toEndOf="@+id/iv_user"
        app:layout_constraintStart_toStartOf="@+id/iv_user"
        app:layout_constraintTop_toTopOf="@+id/p_word"
        app:srcCompat="@drawable/ic_vpn_key_black_24dp" />

    <EditText
        android:id="@+id/p_word"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="Kata Laluan"
        android:inputType="textPassword"
        android:shadowColor="@android:color/background_light"
        android:textColor="#FFFFFF"
        android:textColorHint="#F5F0F0"
        app:layout_constraintBottom_toTopOf="@+id/et_password2"
        app:layout_constraintEnd_toEndOf="@+id/et_username2"
        app:layout_constraintStart_toEndOf="@+id/iv_pass"
        app:layout_constraintTop_toBottomOf="@+id/u_name" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/et_password2"
        app:layout_constraintEnd_toEndOf="@+id/iv_pass"
        app:layout_constraintStart_toStartOf="@+id/iv_pass"
        app:layout_constraintTop_toTopOf="@+id/et_password2"
        app:layout_constraintVertical_bias="0.526"
        app:srcCompat="@android:drawable/ic_lock_idle_lock" />

    <EditText
        android:id="@+id/et_password2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="Sahkan Kata Laluan"
        android:inputType="textPassword"
        android:textColor="#FCFFFCFC"
        android:textColorHint="#F7F2F2"
        app:layout_constraintBottom_toTopOf="@+id/btn_register2"
        app:layout_constraintEnd_toEndOf="@+id/p_word"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/p_word" />

    <Button
        android:id="@+id/btn_register2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/oval"
        android:text="DAFTAR"
        android:textColor="#F2F7F6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_password2" />

</androidx.constraintlayout.widget.ConstraintLayout>